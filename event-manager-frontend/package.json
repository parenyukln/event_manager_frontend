{
    "name": "event-manager-frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@reach/router": "^1.3.4",
        "@reduxjs/toolkit": "^1.5.0",
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "antd": "^4.11.2",
        "axios": "^0.21.1",
        "classnames": "^2.2.6",
        "craco-less": "^1.17.1",
        "lodash": "^4.17.20",
        "moment": "^2.29.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.2",
        "react-scripts": "4.0.3",
        "redux-actions": "^2.6.5",
        "web-vitals": "^1.1.2"
    },
    "scripts": {
        "start": "craco start",
        "build": "craco build",
        "test": "craco test",
        "eject": "craco eject"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,css,json,scss}": "prettier --write",
        "*.{js,jsx}": "eslint",
        "*.{css,scss}": "stylelint"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "no-unused-vars": [
                "warn",
                {
                    "vars": "all",
                    "args": "after-used",
                    "ignoreRestSiblings": false
                }
            ],
            "no-console": "warn",
            "no-useless-constructor": "error",
            "default-case": "error",
            "array-callback-return": "error",
            "jsx-a11y/anchor-has-content": "error",
            "jsx-a11y/anchor-is-valid": "error"
        }
    },
    "stylelint": {
        "extends": [
            "stylelint-prettier/recommended"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.0",
        "prettier": "^2.1.2",
        "redux-devtools": "^3.7.0",
        "stylelint": "^13.7.2",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-prettier": "^1.1.2"
    }
}
